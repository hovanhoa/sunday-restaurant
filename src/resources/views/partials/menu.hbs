                  <div>
                    <h3>{{this.name}}</h3>
                    <p>
                      {{this.description}}
                    </p>
                  </div>
                </div>
                <div class="price-and-cart">
                  <h4 class="offer-price">{{formatCurrency this.price}}</h4>
                  <form action="/add-to-cart" class="add-to-cart-form">
                    <input type="hidden" name="id" id="id" value="{{this.id}}">
                    <button type="submit" class="add-to-cart">Add to Cart</button>
                  </form>
                </div>
              </div>
              {{/if}}
              {{/each}}
            </div>
            <div class="grid-menu">
              {{#each result}}
              {{#if (equal this.category "deserts")}}
              <div class="card-container">
                <div class="offer-item" data-id="{{this.id}}">
                  <img src="/upload/{{this.image}}" alt="" class="img-responsive">
                  <div>
                    <h3>{{this.name}}</h3>
                    <p>
                      {{this.description}}
                    </p>
                  </div>
                </div>
                <div class="price-and-cart">
                  <h4 class="offer-price">{{formatCurrency this.price}}</h4>
                  <form action="/add-to-cart" class="add-to-cart-form">
                    <input type="hidden" name="id" id="id" value="{{this.id}}">
                    <button type="submit" class="add-to-cart">Add to Cart</button>
                  </form>
                </div>
              </div>
              {{/if}}
              {{/each}}
            </div>
            <div class="grid-menu">
              {{#each result}}
              {{#if (equal this.category "drinks")}}
              <div class="card-container">
                <div class="offer-item" data-id="{{this.id}}">
                  <img src="/upload/{{this.image}}" alt="" class="img-responsive">
                  <div>
                    <h3>{{this.name}}</h3>
                    <p>
                      {{this.description}}
                    </p>
                  </div>
                </div>
                <div class="price-and-cart">
                  <h4 class="offer-price">{{formatCurrency this.price}}</h4>
                  <form action="/add-to-cart" class="add-to-cart-form">
                    <input type="hidden" name="id" id="id" value="{{this.id}}">
                    <button type="submit" class="add-to-cart">Add to Cart</button>
                  </form>
                </div>
              </div>
              {{/if}}
              {{/each}}
            </div>
          </div>
        </div>
        <!-- end tab-menu -->
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>